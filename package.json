{
  "name": "improved-bloglist",
  "version": "1.0.0",
  "description": "This is an improved version of the Blog List web application from parts 4 and 5 of the Full Stack Open webdev course, complete with a CI/CD pipeline.",
  "main": "server/index.js",
  "scripts": {
    "server:dev": "cross-env NODE_ENV='development' nodemon server/index.js",
    "client:dev": "vite --host",
    "build": "vite build",
    "start:prod": "cross-env NODE_ENV=production node server/index.js ",
    "test:client": "cross-env NODE_ENV='test' jest --verbose --runInBand --testEnvironment=jsdom ./src",
    "test:server": "cross-env NODE_ENV='test' jest --verbose --runInBand --testEnvironment=node ./server",
    "lint": "eslint './**/*.{js,jsx}'",
    "start:test": "cross-env NODE_ENV='test' MONGODB_TEST_URI='$MONGODB_TEST_URI' SECRET='$SECRET' node server/index.js",
    "start:test:local": "cross-env NODE_ENV='test' node server/index.js",
    "cypress:open": "cypress open",
    "test:e2e": "cypress run"
  },
  "author": "Tom Allison",
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-brands-svg-icons": "^6.5.1",
    "@fortawesome/free-regular-svg-icons": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@reduxjs/toolkit": "^2.0.1",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "bulma": "^0.9.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.5",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.0",
    "react-router-dom": "^6.21.3",
    "redux": "^5.0.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.7",
    "@babel/preset-react": "^7.23.3",
    "@flydotio/dockerfile": "^0.5.4",
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "cypress": "^13.7.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "3.2.4",
    "supertest": "^6.3.3",
    "vite": "^4.4.5"
  },
  "jest": {
    "globalTeardown": "./server/tests/teardown.js",
    "testPathIgnorePatterns": [
      "cypress"
    ]
  }
}
